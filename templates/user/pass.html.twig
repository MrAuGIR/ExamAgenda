{% extends "base.html.twig" %}

{% block stylesheets %}
{{parent()}}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css"
    integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu" crossorigin="anonymous">
{% endblock %}

{% block body %}

<div class='row'>
    <div class='col-12'>
        <h1>Modifier mon mot de passe</h1>
    </div>
    <div class="col-12">
        <form action="" method="POST" onsubmit="return valid_password()">
            <div class="form-group mb-3">
                <label id="labelPassword" for="password">Mon nouveau mot de passe</label>
                <input class="form-control" type="password" id="password" name="password">
                <span id="eye">
                    <i class="fas fa-eye"></i>
                </span>
            </div>
            <div class="form-group mb-3">
                <label id="labelPassword2" for="password2">Confirmer nouveau mot de passe</label>
                <input class="form-control" type="password" id="password2" name="password2">
                <span id="eye2">
                    <i class="fas fa-eye"></i>
                </span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" name="submit" value="confirmer">
            </div>
        </form>
    </div>
    <div class="col-12">
        <div class="verif-password">
            <ul>
                <li id="validPasswordC">Mot de passe entre 6 et 16 caract√®res</li>
                <li id="validPasswordUpper">Au moins une majuscule</li>
                <li id="validPasswordLower">Au moins une minuscule</li>
                <li id="validPasswordNumber">Au moins un chiffre</li>
            </ul>
        </div>
    </div>
</div>


{% endblock %}
{% block js %}
{{parent()}}
<script src="{{asset('script/verif_password.js')}}"></script>
{% endblock %}